<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gardenguidecell_bg" >

    <ImageView
        android:id="@+id/carditemimg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/gardenguidecell_contentbg2x"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />

    <TextView
        android:id="@+id/cardtxt"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/yell" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@drawable/gardenguidecell_titlegg2x" />

    <TextView
        android:id="@+id/titletxt"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="18dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/yell" />

</FrameLayout>